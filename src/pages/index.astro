---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 70vh; background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 100%); padding: 2em 0;">
			<div style="background: white; box-shadow: 0 4px 32px rgba(80,80,180,0.08); border-radius: 1.5em; padding: 3em 2em 2.5em 2em; max-width: 480px; width: 100%; text-align: center; border: 1px solid #e0e7ef;">
				<h1 style="font-size: 2.8em; font-weight: 800; color: #3730a3; margin-bottom: 0.2em; letter-spacing: -1px;">Hello, Nob1e.</h1>
				<p style="font-size:1.5em; margin-top:-0.5em; color:#6366f1; font-weight: 600; margin-bottom: 0.2em;">
					Welcome to BetterNob1e.
				</p>
				<p style="font-size:1.1em; margin-top:-0.5em; color:#64748b; margin-bottom: 1.5em;">
					Where little Nob1es can learn to be better.
				</p>
				<p style="font-size:1.1em; margin-top:-0.5em; color:#334155; text-align: center; margin-bottom: 2em;">
					To learn how...
				</p>
				<button style="font-size: 2.1rem; padding: 1em 2.8em; background: linear-gradient(90deg, #6366f1 0%, #818cf8 100%); color: white; border: none; border-radius: 0.7em; cursor: pointer; font-weight: bold; box-shadow: 0 4px 16px rgba(99,102,241,0.13); transition: background 0.2s, transform 0.1s; letter-spacing: 1px; outline: none; margin-top: 0.5em;"
				onmouseover="this.style.background='linear-gradient(90deg,#818cf8 0%,#6366f1 100%)';this.style.transform='scale(1.04)';"
				onmouseout="this.style.background='linear-gradient(90deg,#6366f1 0%,#818cf8 100%)';this.style.transform='scale(1)';"
				>
					CLICK HERE!
				</button>
			</div>
		</main>
		<Footer />
	</body>
</html>
