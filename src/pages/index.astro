---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>Hello, Nob1e.</h1>
			<p style="font-size:1.1em; margin-top:-0.5em; color:var(--gray-dark);">
				Welcome to BetterNob1e.
			</p>
			<h3>
				Where little Nob1es can learn to be better.
			</h3>
			<p style="text-align: center;">
				To learn how...
			</p>
			<div style="margin-top: 2em; text-align: center;">
				<button style="font-size: 2rem; padding: 1em 2.5em; background: #4f46e5; color: white; border: none; border-radius: 0.5em; cursor: pointer; font-weight: bold; box-shadow: 0 2px 8px rgba(0,0,0,0.08); transition: background 0.2s;">
					CLICK HERE!
				</button>
			</div>
		</main>
		<Footer />
	</body>
</html>
